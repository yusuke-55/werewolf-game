{
  "name": "werewolf-ai-prototype",
  "version": "1.0.0",
  "description": "AI人狼ゲームのプロトタイプ実装",
  "main": "dist/server.js",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "tsc",
    "check:unused": "tsc --noEmit --noUnusedLocals --noUnusedParameters",
    "postinstall": "npm run build",
    "start": "node dist/server.js",
    "dev": "cross-env AUTO_OPEN_BROWSER=1 ts-node src/server.ts",
    "dev:console": "ts-node src/index.ts",
    "autoplay": "node tools/autoplay.js",
    "check:prune": "ts-prune",
    "test:e2e": "playwright test",
    "test:e2e:chrome": "playwright test --project=chrome --headed",
    "watch": "tsc -w"
  },
  "keywords": ["werewolf", "ai", "game"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@playwright/test": "^1.50.0",
    "cross-env": "^7.0.3",
    "ts-prune": "^0.10.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5"
  }
}
